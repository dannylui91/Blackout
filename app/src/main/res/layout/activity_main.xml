<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nyc.c4q.dannylui.blackout.MainActivity"
    android:background="#212136"
    android:orientation="vertical">

    <ImageView android:id="@+id/menu_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#7171b6"
        android:layout_weight="5"/>

    <TextView android:id="@+id/menu_text_view"
        android:layout_below="@id/menu_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/menu_text"
        android:layout_marginTop="10dp"
        android:background="#7171b6"
        android:textSize="20dp"
        android:layout_weight="2"/>

    <LinearLayout android:id="@+id/menu_buttons"
        android:layout_marginTop="10dp"
        android:layout_below="@id/menu_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#7171b6"
        android:layout_weight="1">
        <Button android:id="@+id/menu_button_one"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:onClick="menuChoiceOne"/>
        <Button android:id="@+id/menu_button_two"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:onClick="menuChoiceTwo"/>

    </LinearLayout>
</LinearLayout>
